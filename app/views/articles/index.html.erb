<%#= link_to "New Article", new_article_path %><!--I'm going to copy this over to the Admin panel-->

<!--<div class="wide-page-spacing"></div>-->

<div class="row articlewrapper columns">
    <% @articles.each do |article| %>
        <div class="well blog-box shadowed">
            <span class="head-left"><%= article.title.html_safe %></span><span class="head-right"><%= article.created_at.strftime("%B %d, %Y") %></span>
            <div class="clearfix"></div>
            <p><%= article.body.html_safe %></p>
            <%#= link_to "Edit Article", edit_article_path(article) %><!--I'm going to copy this over to the Admin panel-->
          <div class="clearfix"></div>
        </div>
    <% end %>
</div>