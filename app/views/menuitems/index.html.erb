<div class="adminpage">
  <h1>All Menu Items</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Order</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @menuitems.each do |menuitem| %>
          <tr>
            <td><%= menuitem.name || "N/A" %></td>
            <td><%= menuitem.category || "N/A" %></td>
            <td><%= menuitem.description || "N/A" %></td>
            <td><%= menuitem.price || "N/A" %></td>
            <td><%= menuitem.order || "N/A" %></td>
            <td><%= link_to 'Show', menuitem %></td>
            <td><%= link_to 'Edit', edit_menuitem_path(menuitem) %></td>
            <td><%= link_to 'Destroy', menuitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Menuitem', new_menuitem_path %>
</div>

