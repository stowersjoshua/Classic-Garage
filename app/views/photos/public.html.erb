<div style="padding: 20px; background-color: chocolate;">
    <h3>Photos from the Classic Garage!</h3>
    <h4>app/views/photos/public.html.erb</h4>
</div>


<div id="galleria">
  <div>
    <% @photos.each do |f| %>
        <a href="<%= f.image.url %>"></a>
        <img style="height: 300px;" src="<%= f.image.url %>" alt="<%= f.name %>" />
    <% end %>
  </div>
</div>

<div id="carsdiv">
    <%= render "photos/cars" %>

</div>






<!-- UPLOAD IMAGE FORM - We may want this inside of a modal.. -->
<div style="background-color: chocolate">
    <%= form_for(@photo, :html => { :multipart => true }) do |f| %>

        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <%= f.label :user %><br>
          <%= f.text_field :user %>
        </div>

        <div class="field">
          <%= f.label :order %><br>
          <%= f.number_field :order %>
        </div>

        <div class="field">
          <%#= f.label :approved %><br>
          <%= f.file_field :image %>
        </div>

        <div class="actions">
          <%= f.submit %>
        </div>

    <% end %>
</div><!-- /IMAGE UPLOAD FORM -->









<script>//Page specific, do not put into a .JS file
    Galleria.loadTheme('galleria.classic.js');
    Galleria.run('#galleria');
    $(".gas-pump").css({
        'marginTop' : '5vh',
        'height' : '95vh'
    });
</script>
