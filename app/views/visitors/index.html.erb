
<!--Insert each menu item here-->
<div id="wrapper">
  <div class="menucats">
    <ul class="nav navbar-nav">
      <li class="active"><a href="#cat-1">Entrees</a></li>
      <li><a href="#cat-2">Sides</a></li>
      <li><a href="#cat-3">Desserts</a></li>
      <li><a href="#cat-4">Appetizers</a></li>
      <li><a href="#cat-5">Other</a></li>
    </ul>
    <br/><br/><br/>
  </div>
  <% 5.times do |x| %>
      <% x = x + 1 %>
      <h3 class="categoryname"><%= catcount_to_cat(x) %></h3>
      <div class="columns">
        <% @menu_items.where(category: x.to_s).each do |f| %>
            <div id="<%= "cat-" + f.category %>" class="menu-item-box hvr-shrink" data-toggle="modal" data-target="#<%= "menuitem-" + f.id.to_s %>">

              <div class="itemtext">
                <p class="itemname" style="text-align: center; font-weight: bold; margin-bottom: 5px; color:#fff;"><%= f.name %></p>
              </div>
              <img src="<%= f.image.url %>" />
              <div class="itemtext" style="color:#fff;">
                <!--<p>Category: <%= f.category %></p>-->
                <p class="itemdesc"><%= f.description %></p>
              </div>
            </div>

        <% end %>
      </div>
      <hr />
  <% end %>
</div>

<% @menu_items.each do |g| %>
    <!-- Modals -->
    <div class="modal fade" id="<%= "menuitem-" + g.id.to_s %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel"><%= g.name %></h4>
          </div>
          <div class="modal-body">
            <img src="<%= g.image.url %>" />
            <p class="itemtext2"><%= number_to_currency(g.price/100) %></p>
            <p class="itemtext2"><%= g.description %></p>
          </div>
        </div>
      </div>
    </div>
<% end %>


